<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_track_avatar"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_launcher_background"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Take care of you đi"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_track_image"
        app:layout_constraintTop_toTopOf="@id/cv_track_image"/>

    <TextView
        android:id="@+id/tv_performer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Võ Văn Minh Thông"
        android:textStyle="normal"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="03:32"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_track_image"
        app:layout_constraintEnd_toEndOf="@id/cv_track_image"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9.23 Mb"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_performer"
        app:layout_constraintTop_toBottomOf="@id/tv_performer"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_favorite_track"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:tint="@color/grey_300"
        app:layout_constraintBottom_toBottomOf="@id/cv_track_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>