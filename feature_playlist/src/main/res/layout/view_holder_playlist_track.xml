<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_track_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_sample"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Take care of you đi"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_text_secondary"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toEndOf="@id/cv_track_image"
        app:layout_constraintTop_toTopOf="@id/cv_track_image"
        app:layout_constraintBottom_toTopOf="@id/tv_performer"/>

    <TextView
        android:id="@+id/tv_performer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Võ văn minh thông"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_text_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/cv_track_image"/>

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_track_image"
        app:layout_constraintBottom_toBottomOf="@id/cv_track_image"/>


</androidx.constraintlayout.widget.ConstraintLayout>