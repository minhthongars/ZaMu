<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_track_avatar"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_launcher_background"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Take care of you đi"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_text_secondary"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_track_image"
        app:layout_constraintTop_toTopOf="@id/cv_track_image"/>

    <TextView
        android:id="@+id/tv_performer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Võ Văn Minh Thông"
        android:textStyle="normal"
        android:maxLines="2"
        android:paddingEnd="6dp"
        android:textColor="@color/color_text_secondary"
        android:ellipsize="end"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <ImageView
        android:id="@+id/iv_playlist"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/media3_icon_playlist_add"
        android:layout_margin="8dp"
        android:tint="@color/blue_300"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/cv_track_image"
        app:layout_constraintStart_toStartOf="@id/cv_track_image"/>

    <ImageButton
        android:id="@+id/iv_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/media3_icon_plus"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_track_image"/>

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_track_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>